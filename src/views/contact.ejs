<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="display-1 text-center">Contact</h1>
      <p class="text-center lead">Create or edit your contact below.</p>

      <%- include('includes/messages') %>

      <% if (contact._id) { %>
        <form action="/contacts/edit/<%= contact._id %>" method="POST">
      <% } else { %>
        <form action="/contacts/register" method="POST">
      <% } %>

        <input type="hidden" name="_csrf" value=<%= csrfToken %>>

        <div class="mb-3">
          <label class="form-label">Name</label>
          <input value="<%= contact.name %>" type="text" class="form-control" name="name">
        </div>
        <div class="mb-3">
          <label class="form-label">Lastname</label>
          <input value="<%= contact.lastname %>" type="text" class="form-control" name="lastname">
        </div>
        <div class="mb-3">
          <label class="form-label">Email</label>
          <input value="<%= contact.email %>" type="email" class="form-control" name="email">
        </div>
        <div class="mb-3">
          <label class="form-label">Phone</label>
          <input value="<%= contact.phone %>" type="tel" class="form-control" name="phone">
        </div>
        
        <% if (contact._id) { %>
          <button type="submit" class="btn btn-primary">Edit</button>
        <% } else { %>
          <button type="submit" class="btn btn-primary">Create</button>
        <% } %>
      </form>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>